<body>
    <div class="container">
        <div class="hearts-container">
            <div class="floating-heart">‚ù§Ô∏è</div>
            <div class="floating-heart">üíï</div>
            <div class="floating-heart">üíñ</div>
            <div class="floating-heart">üíó</div>
            <div class="floating-heart">üíù</div>
        </div>
        
        <div class="proposal-card">
            <h1 class="title">Nirutaüíé, Will You Be My Valentine?</h1>
            
            <div class="message">
                <p>Dear Nirutaüíé, every moment with you feels like magic</p>
                <p>Your smile lights up Sunilü´Ä's world like a thousand stars</p>
                <p>Timro muskaan dekhera mero din subha bhanchha</p>
                <p>Being with you makes everything better</p>
                <p>Jastai Muna ra Madan, hamro premkatha anant chha</p>
                <p>Jastai Madan le Muna lai chayeko, Sunilü´Ä le Nirutaüíé lai chayeko chha</p>
                <p class="final-question">So... will you be my Sita? üíï</p>
            </div>
            
            <div class="buttons">
                <button class="btn yes-btn" id="yesBtn">Yes! üíñ</button>
                <button class="btn no-btn" id="noBtn">No üíî</button>
            </div>
            
            <div class="response" id="response"></div>
        </div>
        
        <div class="fireworks" id="fireworks"></div>
    </div>
    
    <script>
      document.addEventListener('DOMContentLoaded', function() {
    const yesBtn = document.getElementById('yesBtn');
    const noBtn = document.getElementById('noBtn');
    const response = document.getElementById('response');
    const fireworks = document.getElementById('fireworks');
    
    yesBtn.addEventListener('click', function(e) {
        e.preventDefault();
        console.log('Yes button clicked!'); // Debug log
        showYesResponse();
        createFireworks();
        celebrate();
    });
    
    noBtn.addEventListener('click', function() {
        showNoResponse();
        moveNoButton();
    });
    
    // Make the No button run away from mouse
    noBtn.addEventListener('mouseenter', function() {
        runawayFromMouse();
    });
    
    // Reset button text when mouse leaves
    noBtn.addEventListener('mouseleave', function() {
        noBtn.textContent = 'No üíî';
        noBtn.style.transform = 'scale(1)';
    });
    
    function showYesResponse() {
        console.log('Yes button clicked!'); // Debug log
        
        // Create romantic background overlay
        const overlay = document.createElement('div');
        overlay.style.cssText = `
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: radial-gradient(circle at center, rgba(255, 77, 109, 0.1) 0%, rgba(255, 107, 107, 0.05) 50%, transparent 100%);
            z-index: 999;
            pointer-events: none;
            animation: fadeInOverlay 1s ease-out forwards;
        `;
        document.body.appendChild(overlay);
        
        response.innerHTML = `
            <div class="yes-response">
                <h2 style="font-size: 2.5rem; margin-bottom: 1rem; animation: heartbeat 1s ease-in-out infinite;">üíñ YAY Nirutaüíé! üíñ</h2>
                <p style="font-size: 1.2rem; margin: 0.5rem 0;">You made Sunilü´Ä the happiest person!</p>
                <p style="font-size: 1.2rem; margin: 0.5rem 0;">Timro muskaan dekhi ma har din premma badhchhu</p>
                <p style="font-size: 1.2rem; margin: 0.5rem 0;">Hamro premkatha shuru bhayo, jastai Muna ra Madan ko anant katha</p>
                <p style="font-size: 1.2rem; margin: 0.5rem 0;">Sunilü´Ä can't wait to spend Valentine's Day with you!</p>
                <p style="font-size: 1.3rem; margin: 1rem 0; font-weight: bold; animation: heartbeat 1.5s ease-in-out infinite;">‚ù§Ô∏è Sunilü´Ä loves you forever! ‚ù§Ô∏è</p>
            </div>
        `;
        
        // Remove existing classes and add new ones
        response.classList.remove('no', 'show');
        response.classList.add('yes', 'show');
        
        // Hide buttons after response
        yesBtn.style.display = 'none';
        noBtn.style.display = 'none';
        
        console.log('Response shown:', response.className); // Debug log
    }
    
    function showNoResponse() {
        const messages = [
            "Nirutaüíé, are you sure? üíî",
            "Think again Nirutaüíé! ü•∫",
            "Sunilü´Ä's heart is breaking... üíî",
            "Please reconsider Nirutaüíé! ü•∫",
            "Sunilü´Ä will be so sad... üò¢",
            "Don't break Sunilü´Ä's heart! üíî"
        ];
        
        const randomMessage = messages[Math.floor(Math.random() * messages.length)];
        
        response.innerHTML = `
            <div class="no-response">
                <p>${randomMessage}</p>
            </div>
        `;
        response.className = 'response no show';
        
        // Hide response after 2 seconds
        setTimeout(() => {
            response.className = 'response';
        }, 2000);
    }
    
    function runawayFromMouse() {
        const maxX = window.innerWidth - noBtn.offsetWidth - 20;
        const maxY = window.innerHeight - noBtn.offsetHeight - 20;
        
        // Get current mouse position (approximate)
        const mouseX = window.innerWidth / 2;
        const mouseY = window.innerHeight / 2;
        
        // Calculate position far from mouse
        let newX, newY;
        
        // Try to place button on opposite side of screen from mouse
        if (mouseX < window.innerWidth / 2) {
            newX = maxX - Math.random() * 100;
        } else {
            newX = Math.random() * 100;
        }
        
        if (mouseY < window.innerHeight / 2) {
            newY = maxY - Math.random() * 100;
        } else {
            newY = Math.random() * 100;
        }
        
        noBtn.style.position = 'fixed';
        noBtn.style.left = newX + 'px';
        noBtn.style.top = newY + 'px';
        noBtn.style.zIndex = '1000';
        noBtn.style.transition = 'all 0.3s ease';
        
        // Change button text to something funny
        const funnyTexts = [
            "Can't catch me! üòè",
            "Too slow! üèÉ‚Äç‚ôÇÔ∏è",
            "Try again! üòù",
            "Nope! üôÖ‚Äç‚ôÄÔ∏è",
            "Run away! üí®",
            "Missed me! üòé",
            "Too fast! ‚ö°",
            "Not today! üòà"
        ];
        noBtn.textContent = funnyTexts[Math.floor(Math.random() * funnyTexts.length)];
        
        // Add a little shake animation and scale
        noBtn.style.animation = 'shake 0.5s';
        noBtn.style.transform = 'scale(1.1)';
        setTimeout(() => {
            noBtn.style.animation = '';
            noBtn.style.transform = 'scale(1)';
        }, 500);
    }
    
    function moveNoButton() {
        const maxX = window.innerWidth - noBtn.offsetWidth - 20;
        const maxY = window.innerHeight - noBtn.offsetHeight - 20;
        
        const randomX = Math.random() * maxX;
        const randomY = Math.random() * maxY;
        
        noBtn.style.position = 'fixed';
        noBtn.style.left = randomX + 'px';
        noBtn.style.top = randomY + 'px';
        noBtn.style.zIndex = '1000';
        
        // Add some fun text to the no button
        const noTexts = [
            "No üíî",
            "Never! üíî", 
            "Nope! üíî",
            "Can't! üíî",
            "Sorry! üíî"
        ];
        noBtn.textContent = noTexts[Math.floor(Math.random() * noTexts.length)];
    }
    
    function createFireworks() {
        const colors = ['#ff6b6b', '#ee5a24', '#feca57', '#ff9ff3', '#54a0ff', '#48dbfb'];
        
        for (let i = 0; i < 50; i++) {
            setTimeout(() => {
                createFirework(colors);
            }, i * 100);
        }
    }
    
    function createFirework(colors) {
        const x = Math.random() * window.innerWidth;
        const y = Math.random() * window.innerHeight;
        const color = colors[Math.floor(Math.random() * colors.length)];
        
        for (let i = 0; i < 30; i++) {
            const particle = document.createElement('div');
            particle.className = 'firework';
            particle.style.left = x + 'px';
            particle.style.top = y + 'px';
            particle.style.background = color;
            
            const angle = (Math.PI * 2 * i) / 30;
            const velocity = 50 + Math.random() * 50;
            const vx = Math.cos(angle) * velocity;
            const vy = Math.sin(angle) * velocity;
            
            particle.style.transform = `translate(${vx}px, ${vy}px)`;
            
            fireworks.appendChild(particle);
            
            setTimeout(() => {
                particle.remove();
            }, 1000);
        }
    }
    
    function celebrate() {
        // Create floating hearts
        for (let i = 0; i < 20; i++) {
            setTimeout(() => {
                createFloatingHeart();
            }, i * 200);
        }
        
        // Play a celebration sound effect (if you want to add audio)
        // const audio = new Audio('celebration.mp3');
        // audio.play();
    }
    
    function createFloatingHeart() {
        const heart = document.createElement('div');
        heart.innerHTML = ['‚ù§Ô∏è', 'üíï', 'üíñ', 'üíó', 'üíù'][Math.floor(Math.random() * 5)];
        heart.style.position = 'fixed';
        heart.style.left = Math.random() * window.innerWidth + 'px';
        heart.style.bottom = '-50px';
        const size = (2 + Math.random() * 2);
        heart.style.fontSize = size + 'rem';
        heart.style.width = size + 'rem';
        heart.style.height = size + 'rem';
        heart.style.zIndex = '1000';
        heart.style.pointerEvents = 'none';
        heart.style.display = 'flex';
        heart.style.alignItems = 'center';
        heart.style.justifyContent = 'center';
        heart.style.animation = 'floatUp 4s ease-out forwards';
        
        document.body.appendChild(heart);
        
        setTimeout(() => {
            heart.remove();
        }, 4000);
    }
    
    // Add floating up animation
    const style = document.createElement('style');
    style.textContent = `
        @keyframes float {
            0%, 100% {
                transform: translateY(0px) rotate(0deg) scale(1);
                opacity: 0.7;
            }
            50% {
                transform: translateY(-20px) rotate(10deg) scale(1.1);
                opacity: 1;
            }
        }
    `;
    document.head.appendChild(style);
    
    // Add shake animation
    const shakeStyle = document.createElement('style');
    shakeStyle.textContent = `
        @keyframes shake {
            0%, 100% { transform: translateX(0); }
            25% { transform: translateX(-10px) rotate(-5deg); }
            75% { transform: translateX(10px) rotate(5deg); }
        }
    `;
    document.head.appendChild(shakeStyle);
    
    // Add some ambient floating hearts
    setInterval(() => {
        if (Math.random() > 0.7) {
            createAmbientHeart();
        }
    }, 3000);
    
    function createAmbientHeart() {
        const heart = document.createElement('div');
        heart.innerHTML = ['‚ù§Ô∏è', 'üíï'][Math.floor(Math.random() * 2)];
        heart.style.position = 'fixed';
        heart.style.left = Math.random() * window.innerWidth + 'px';
        heart.style.top = '-50px';
        heart.style.fontSize = '1.5rem';
        heart.style.width = '1.5rem';
        heart.style.height = '1.5rem';
        heart.style.zIndex = '1';
        heart.style.pointerEvents = 'none';
        heart.style.opacity = '0.6';
        heart.style.display = 'flex';
        heart.style.alignItems = 'center';
        heart.style.justifyContent = 'center';
        heart.style.animation = 'fallDown 8s linear forwards';
        
        document.body.appendChild(heart);
        
        setTimeout(() => {
            heart.remove();
        }, 8000);
    }
    
    // Add falling down animation
    const fallStyle = document.createElement('style');
    fallStyle.textContent = `
        @keyframes fallDown {
            0% {
                transform: translateY(0) rotate(0deg);
                opacity: 0.6;
            }
            100% {
                transform: translateY(100vh) rotate(360deg);
                opacity: 0;
            }
        }
    `;
    document.head.appendChild(fallStyle);
});

    </script>
</body>
</html>
